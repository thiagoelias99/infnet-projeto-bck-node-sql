{
  "openapi": "3.0.3",
  "info": {
    "title": "API de Exemplo",
    "description": "Exemplo de utilização do Swagger",
    "version": "0.0.1",
    "termsOfService": "http://www.google.com",
    "contact": {
      "name": "Thiago Elias",
      "email": "thiagoelias99@gmail.com",
      "url": "https://www.linkedin.com/in/eng-thiagoelias/"
    },
    "license": {
      "name": "License: GPLv3",
      "url": "https://www.gnu.org/licenses/quick-guide-gplv3.pt-br.html"
    }
  },
  "externalDocs": {
    "description": "Documentação formal",
    "url": "http://www.google.com"
  },
  "servers": [
    {
      "url": "http://localhost:3333"
    }
  ],
  "paths": {
    "/students": {
      "post": {
        "summary": "Create a Student",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StudentCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "uuid": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          }
        }
      },
      "get": {
        "summary": "Retorna todos os estudantes",
        "description": "Descrição detalhada",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Student"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/students/{uuid}": {
      "parameters": [
        {
          "name": "uuid",
          "in": "path",
          "schema": {
            "type": "string"
          },
          "required": true
        }
      ],
      "get": {
        "summary": "Retorna estudante",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StudentWCourses"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        },
        "security": [
          {
            "auth": []
          }
        ]
      },
      "put": {
        "summary": "Update student by uuid",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StudentCreate"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Success. No Content"
          },
          "400": {
            "$ref": "#/components/responses/400"
          }
        }
      },
      "delete": {
        "summary": "Delete student by uuid",
        "responses": {
          "204": {
            "description": "Success. No Content"
          },
          "400": {
            "$ref": "#/components/responses/400"
          }
        }
      }
    },
    "/courses": {
      "post": {
        "summary": "Create a Course",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CourseCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "uuid": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          }
        }
      },
      "get": {
        "summary": "Returns all courses",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CourseComplete"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "auth": []
          }
        ]
      }
    },
    "/login": {
      "post": {
        "summary": "Login and returns JWT",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jwt": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Student": {
        "type": "object",
        "properties": {
          "uuid": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "birthDate": {
            "type": "string"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "thiago@email.com"
          },
          "password": {
            "type": "string",
            "example": "123456"
          }
        }
      },
      "StudentCreate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Thiago Elias"
          },
          "email": {
            "type": "string",
            "example": "thiago@email.com"
          },
          "password": {
            "type": "string",
            "example": "123456"
          },
          "birthDate": {
            "type": "string",
            "example": "09/15/2000"
          }
        }
      },
      "StudentWCourses": {
        "type": "object",
        "properties": {
          "uuid": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "birthDate": {
            "type": "string"
          },
          "Courses": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Course"
            }
          }
        }
      },
      "Course": {
        "type": "object",
        "properties": {
          "uuid": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "courseHours": {
            "type": "number"
          },
          "startDate": {
            "type": "string"
          },
          "finishDate": {
            "type": "string"
          }
        }
      },
      "CourseCreate": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "courseHours": {
            "type": "number"
          },
          "startDate": {
            "type": "string"
          },
          "finishDate": {
            "type": "string"
          }
        }
      },
      "CourseComplete": {
        "type": "object",
        "properties": {
          "uuid": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "courseHours": {
            "type": "number"
          },
          "startDate": {
            "type": "string"
          },
          "finishDate": {
            "type": "string"
          },
          "Students": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "uuid": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "numberOfSubscribers": {
            "type": "number"
          },
          "courseStatus": {
            "type":"string"
          }
        }
      }
    },
    "securitySchemes": {
      "auth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "400": {
        "description": "Error: Bad Request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "401": {
        "description": "Error: Unauthorized",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "500": {
        "description": "Internal Server Error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}